extends base.pug

block content 
  form(method="POST")
    input(placeholder="IP_Address", required, type="text", name="scourt" maxlength="20")
    input(placeholder="HostName", required, type="text" name="switchip", minlength="7", maxlength="15", size="15", pattern="^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$")  
    input(placeholder="장비명", required, type="text" name="community")  
    input(placeholder="용도", required, type="text", name="network" )
    input(placeholder="비고", required, type="text", name="subnet", minlength="7", maxlength="15", size="15", pattern="^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$")      
    input(type="submit", value="Upload IP")
  
